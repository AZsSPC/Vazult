<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Vazult" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimaryDark">@color/b_tt_d</item>
        <item name="colorPrimary">@color/b_tt</item>
        <item name="colorPrimaryVariant">@color/b_tt_d</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="android:colorSecondary">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.VazultLoad" parent="Theme.Vazult">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Theme.Vazult.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Vazult.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Vazult.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
